 <div class="jumbotron container-fluid col-lg-12 col-md-12 col-sm-12 col-xs-12"  style="max-height:11.5rem !important">

        <div class="jumbo_text section">
            <a href="/" target='_self'>
                <div class="animated fadeInDown">
                    <img src="../images/q_logo_full.png" class="img-responsive" width="150rem">                    
                    <h1 id="title">Register to Imperium</h1>
                </div>
            </a>            
        </div>

</div>

<div class="row  justify-content-center">
    <div class="col-lg-4 col-md-4 col-sm-4">        
        {{#if errors}}        
            {{#each errors}}
               <div class="alert alert-danger">{{msg}}</div>                              
            {{/each}}            
        {{/if}}
        <form action="/users/register" method="post" target="_self">
        <div class="form-group">            
            <input type="text" class="form-control" name="full_name" aria-describedby="textHelp" placeholder="Full name">
            <small  class="form-text text-muted">Eg. John Wick</small>
        </div>
        <div class="form-group">            
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small class="form-text text-muted">Use your work email @quaero.com</small>
        </div>
        <div class="form-group">            
            <input type="text" class="form-control" name="username" aria-describedby="textHelp" placeholder="Quaero username">
            <small class="form-text text-muted">Eg. balajia, baba_yaga</small>
        </div>
        <div class="form-group">            
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>               
        <button type="submit" class="btn btn-primary">Register</button>        
        </form>
    </div>
</div>